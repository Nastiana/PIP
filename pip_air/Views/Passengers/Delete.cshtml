@model pip_air.Models.Passenger

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Пассажиры</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            ФИО
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FIO)
        </dd>

        <dt>
           Номер паспорта
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Num_pasport)
        </dd>

        <dt>
           Номер рейса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.Num_flight)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
