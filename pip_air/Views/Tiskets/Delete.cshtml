@model pip_air.Models.Tiskets

@{
    ViewBag.Title = "Delete";
}

<h2>Удаление</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Билеты</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           Номер рейса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Flight.Num_flight)
        </dd>

        <dt>
           Кол-во мест
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sum_place)
        </dd>

        <dt>
            Зарезервировано
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sum_rezerved)
        </dd>

        <dt>
            Куплено
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Sum_bought)
        </dd>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Удалить" class="btn btn-default" /> |
            @Html.ActionLink("Назад", "Index")
        </div>
    }
</div>
